{
    "compilerOptions": {
        "target": "ES2015",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@config/*": [
                "src/config/*"
            ],
            "@route/*": [
                "src/route/*"
            ],
            "@events/*": [
                "src/events/*"
            ],
            "@lib/*": [
                "src/lib/*"
            ],
            "@/*": [
                "src/*"
            ]
        },
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
    ]
}