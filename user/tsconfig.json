{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@events/*": [
        "src/events/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@route/*": [
        "src/route/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "outDir": "./dist",
    "typeRoots": [
      "src/types",
      "./node_modules/@types"
    ],
    "types": [
      "express.d.ts"
    ]
  },
  "include": [
    "src/**/*"
  ]
}