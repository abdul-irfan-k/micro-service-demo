{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": [
        "src/config/*"
      ],
      "@event/*": [
        "src/event/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@router/*": [
        "src/router/*"
      ],
      "@/*": [
        "src/*"
      ],
    },
    "outDir": "./dist",
  },
  "include": [
    "src/**/*"
  ]
}